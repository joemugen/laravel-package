{
  "name": "prooph/laravel-package",
  "description": "Laravel package for prooph components to get started out of the box with message bus, CQRS, event sourcing and snapshots",
  "type": "library",
  "license": "BSD-3-Clause",
  "homepage": "http://getprooph.org",
  "authors": [
    {
      "name": "Alexander Miertsch",
      "email": "contact@prooph.de",
      "homepage": "http://prooph-software.com/"
    },
    {
      "name": "Sandro Keil",
      "email": "contact@prooph.de",
      "homepage": "http://prooph-software.com/"
    },
    {
      "name": "Sascha-Oliver Prolic",
      "email": "saschaprolic@googlemail.com"
    }
  ],
  "keywords": [
    "prooph",
    "laravel",
    "package",
    "cqrs",
    "service bus",
    "event sourcing",
    "snapshots",
    "integration"
  ],
  "repositories": [
    {
      "name": "prooph/event-store-bus-bridge",
      "type": "github",
      "url": "https://github.com/joemugen/event-store-bus-bridge"
    },
    {
      "name": "prooph/pdo-snapshot-store",
      "type": "github",
      "url": "https://github.com/joemugen/pdo-snapshot-store"
    },
    {
      "name": "prooph/service-bus",
      "type": "github",
      "url": "https://github.com/joemugen/service-bus"
    }
  ],
  "require": {
    "php": "^7.1|^8.0",
    "psr/container": "^1.0",
    "illuminate/support": "^5.0",
    "illuminate/contracts": "^5.0",
    "illuminate/bus": "^5.0",
    "prooph/event-sourcing": "^5.0",
    "prooph/event-store": "^7.0",
    "prooph/event-store-bus-bridge": "dev-feature/php8",
    "prooph/pdo-event-store": "^1.0",
    "prooph/service-bus": "dev-feature/php8",
    "prooph/pdo-snapshot-store": "dev-feature/php8",
    "sandrokeil/interop-config": "^2.0"
  },
  "require-dev": {
    "laravel/framework": "^5.0",
    "phpunit/phpunit": "^4.8 || ^5.0",
    "satooshi/php-coveralls": "^1.0",
    "prooph/php-cs-fixer-config": "^v0.4.0",
    "react/promise": "^2.5"
  },
  "suggest": {
    "illuminate/database": "If you want to use the database migration schema classes for event store and snapshot",
    "proophsoftware/prooph-cli": "For Rapid Prototyping, if you want to generate your aggregates, commands, handlers and events."
  },
  "conflict": {
    "sandrokeil/interop-config": "<2.0.1"
  },
  "autoload": {
    "psr-4": {
      "Prooph\\Package\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ProophTest\\Package\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@cs",
      "@test"
    ],
    "coveralls": "coveralls",
    "cs": "php-cs-fixer fix -v --diff --dry-run",
    "cs-fix": "php-cs-fixer fix -v --diff",
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-clover clover.xml"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Prooph\\Package\\ProophServiceProvider"
      ],
      "aliases": {
        "CommandBus": "Prooph\\Package\\Facades\\CommandBus",
        "EventBus": "Prooph\\Package\\Facades\\EventBus",
        "QueryBus": "Prooph\\Package\\Facades\\QueryBus"
      }
    }
  }
}
